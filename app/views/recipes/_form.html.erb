<% if @recipe.errors.any? %> 
    <% @recipe.errors.full_messages.each do |error| %> 
       <div> <%= error %> </div>
    <% end %>
<% end %> 

<%= form_for [@user, @recipe] do |f| %>
<%= f.label 'Name' %><br>
<%= f.text_field :name %><br>

<%= f.label 'Difficulty Level' %><br>
<%= f.number_field :difficulty_level, in: 1..5 %><br> 

<%= f.label 'Cooking Time' %><br>
<%= f.text_area :time %><br>     

<%= f.label 'Servings' %><br>
<%= f.text_area :servings %><br> 

<%= f.label 'Ingredients Used:' %><br>
Names <%= f.text_area :ingredients_names, :value => @recipe.show_ingredient_names %>
Quantities<%= f.text_area :ingredients_quantities, :value => @recipe.show_ingredient_quantities  %>

<%= f.label 'Description/Instructions' %><br>
<%= f.text_field :description %><br> 

<%= f.submit "Submit Recipe" %>
<% end %>  