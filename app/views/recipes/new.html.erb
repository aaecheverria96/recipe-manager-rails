<h1> Chef it up! </h1>   


<%= form_for @recipe do |f| %> 
    <%= f.label 'Name' %><br>
    <%= f.text_field :name %><br>
  
    <%= f.label 'Difficulty Level' %><br>
    <%= f.number_field :difficulty_level, in: 1..5 %><br> 

    <%= f.label 'Cooking Time' %><br>
    <%= f.text_field :time %><br>     

    <%= f.label 'Servings' %><br>
    <%= f.text_field :servings %><br> 
    
    <%= f.label 'Ingredients Used:' %><br>
    Names<%= f.text_area :ingredients_names, placeholder: "Eggs, salt, water" %><br>
    Quantities<%= f.text_area :ingredients_quantities, placeholder: "2, 1 pinch, 1 cup" %><br>

    <%= f.label 'Description/Instructions' %><br>
    <%= f.text_area :description%><br> 
  
    <%= f.submit "Create Recipe" %>
  <% end %>   