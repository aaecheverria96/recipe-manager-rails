<h2>Choose your username and password wisely... </h2>

<%= form_with(model: @user) do |f| %>
    Username: <%= f.text_field :username %><br>
    Password: <%= f.password_field :password %><br>
    Password Confirmation: <%= f.password_field :password_confirmation %><br>
    <%= f.submit "Submit" %><br>
  <% end %> 

  <div class="link-to-login"> 
  <%= button_to "Already have an account?", '/login'  %> 
</div>  

  <div class="third-party-login"> 
  <%= button_to "Signup with Google", '/auth/google_oauth2'  %> 
</div>   